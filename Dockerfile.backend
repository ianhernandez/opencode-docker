FROM oven/bun:1-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY backend/package.json ./

# Install dependencies using bun
RUN bun install

# Copy source code
COPY backend/ .

# Expose port
EXPOSE 3000

# Start the application directly with Bun (no build step needed)
CMD ["bun", "run", "src/index.ts"]
